<%= render 'layouts/header' %>

<h1>投稿フォーム</h1>
<%= form_with model: @workout do |f| %>
  <h4>日付</h4>
  <%= f.label :date, "トレーニング日" %>
  <%= f.date_select :date %>
  <h4>一言メモ</h4>
  <%= f.text_area :memo %>
  <h4>公開非公開設定</h4>
  <%= f.select :is_public, [["公開", true], ["非公開", false]] %>
  <%= f.submit '投稿' %>
<% end %>