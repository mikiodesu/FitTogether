<%= render 'layouts/header' %>

<h1>投稿フォーム</h1>
<%= form_with model: @workout do |f| %>
  <h4>日付</h4>
  <%= f.label :date, "トレーニング日" %>
  <%= f.date_select :date %>
  <h4>一言メモ</h4>
  <%= f.text_area :memo %>
  <h4>公開非公開設定</h4>
  <%= f.select :is_public, [["公開", true], ["非公開", false]] %>

   <h3>トレーニング詳細</h3>
  <%= f.fields_for :workout_details do |detail_form| %>
    <div>
      <%= detail_form.label :exercise_name, "種目" %>
      <%= detail_form.text_field :exercise_name %>

      <%= detail_form.label :weight, "重量(kg)" %>
      <%= detail_form.number_field :weight %>

      <%= detail_form.label :reps, "回数" %>
      <%= detail_form.number_field :reps %>

      <%= detail_form.label :sets, "セット数" %>
      <%= detail_form.number_field :sets %>
    </div>
  <% end %>
  <%= f.submit '投稿' %>
<% end %>