<div class="container d-flex justify-content-center">
  <div class="workouts-timeline w-75"> <!-- 横幅を75%に制限 -->
    <% @workouts.each do |workout| %>
      <div class="workout-item d-flex border-bottom py-3">
        <!-- 左：プロフィール画像 -->
        <div class="flex-shrink-0 me-3">
          <%= link_to user_path(workout.user) do %>
            <%= image_tag workout.user.get_profile_image(70, 70), class: "profile-img" %>
          <% end %>
        </div>

        <!-- 右：投稿内容 -->
        <div class="workout-content flex-grow-1">
          <div class="d-flex justify-content-between">
            <strong><%= workout.user.name %></strong>
            <small>日付：<%= workout.date.strftime('%-m/%-d') %></small>
          </div>

          <p class="mb-2 memo-text"><%= workout.memo %></p>

          <div class="workout-actions d-flex justify-content-start gap-3">
            <div id="like-button-<%= workout.id %>">
              <%= render "likes/like", workout: workout %>
            </div>
            <%= link_to "💬 コメント(#{workout.comments.count})", workout_path(workout) %>
            <%= link_to "詳細へ", workout_path(workout), class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>