<h1>ユーザー一覧</h1>

<%= render 'form' %>

<% if @users.present? %>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= image_tag user.get_profile_image(50, 50), class: "profile-img" %>
        <%= link_to user.name, user_path(user) %>

        <% unless current_user == user %>
          <% if current_user.following?(user) %>
            <%= button_to "フォロー解除", user_relationships_path(user), method: :delete %>
          <% else %>
            <%= button_to "フォローする", user_relationships_path(user), method: :post %>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>該当するユーザーはいません</p>
<% end %>