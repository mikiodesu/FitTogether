<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-center">プロフィール編集</h2>

        <%= form_with model: @user, local: true, html: { class: "needs-validation" } do |f| %>
          <div class="mb-3">
            <%= f.label :name, "ニックネーム", class: "form-label" %>
            <%= f.text_field :name, autofocus: true, class: "form-control", id: "inputName", placeholder: "ニックネーム" %>
          </div>

          <div class="mb-3">
            <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
            <%= f.file_field :profile_image, accept: "image/*", class: "form-control", id: "inputImage" %>
          </div>

          <div class="mb-3">
            <%= f.label :introduction, "自己紹介", class: "form-label" %>
            <%= f.text_area :introduction, class: "form-control", id: "inputIntroduction", placeholder: "自己紹介を入力してください", rows: 5 %>
          </div>

          <div class="text-center">
            <%= f.submit "変更を保存", class: "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>