<%= render 'layouts/header' %>

<h2>プロフィール編集</h2>
<%= form_with model: @user, local: true do |f| %>
  <label for="inputName">ニックネーム</label>
  <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "ニックネーム" %>

  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", id: "inputImage" %>  

  <label for="inputIntroduction">自己紹介</label>
  <%= f.text_area :introduction, id: "inputIntroduction", placeholder: "自己紹介を入力してください", rows: 5 %>

  <%= f.submit "変更を保存" %>
<% end %>