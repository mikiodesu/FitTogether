<% workout.comments.each do |comment| %>
  <div class="border-bottom py-2">
    <!-- ヘッダー：名前左、日付右 -->
    <div class="d-flex justify-content-between align-items-center mb-1">
      <strong><%= comment.user.name %></strong>
      <small class="text-muted"><%= comment.created_at.strftime("%-m/%-d") %></small>
    </div>

    <!-- コメント本文 -->
    <div>
      <%= simple_format(comment.content, sanitize: true) %>
    </div>

    <!-- 削除リンク（自分のコメントのみ） -->
    <% if comment.user == current_user %>
      <div class="mt-1">
        <%= link_to "削除", workout_comment_path(workout, comment), method: :delete, data: { confirm: "コメントを削除します" }, class: "text-danger text-decoration-none" %>
      </div>
    <% end %>
  </div>
<% end %>