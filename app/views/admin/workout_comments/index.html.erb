<h1><%= @workout.date %> のコメント一覧</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザ</th>
      <th>内容</th>
      <th>作成日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.user.name %></td>
        <td><%= comment.content %></td>
        <td><%= comment.created_at.strftime("%Y/%m/%d") %></td>
        <td>
          <%= link_to "削除", admin_workout_comment_path(@workout, comment), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "投稿一覧に戻る", admin_workouts_path %>