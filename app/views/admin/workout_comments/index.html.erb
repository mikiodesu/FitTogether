<h1 class="text-center mb-4">投稿ID：<%= @workout.id %> のコメント一覧</h1>

<div class="d-flex justify-content-center">
  <div class="w-75">
    <table class="table table-striped table-bordered text-center">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>ユーザ</th>
          <th>内容</th>
          <th>作成日</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.id %></td>
            <td><%= comment.user.name %></td>
            <td><%= comment.content %></td>
            <td><%= comment.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <%= link_to "削除", admin_workout_comment_path(@workout, comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="mt-3 text-center">
      <%= link_to "投稿一覧に戻る", admin_workouts_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>